<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Preview: <%= title %></title>
    <style>
      body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial; max-width:960px; margin:20px auto; padding:20px; }
      .backdrop { width:100%; max-height:360px; object-fit:cover; border:1px solid #ddd }
      .media { margin-top:12px }
      iframe { width:100%; height:200px; border:0 }
      pre { background:#f8f8f8; padding:12px }
      .actions { margin-top:18px }
    </style>
  </head>
  <body>
    <h1>Preview: <%= title %></h1>

    <% if (backdrop) { %>
      <img class="backdrop" src="<%= backdrop %>" alt="backdrop" />
    <% } else { %>
      <div style="background:#eee;padding:40px;text-align:center">Default background</div>
    <% } %>

    <h3>Event details</h3>
    <pre><%= details %></pre>

    <div class="media">
      <% if (youtubeEmbed) { %>
        <h4>YouTube</h4>
        <iframe src="<%= youtubeEmbed %>" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      <% } %>

      <% if (spotifyEmbed) { %>
        <h4>Spotify</h4>
        <iframe src="<%= spotifyEmbed %>" allow="encrypted-media"></iframe>
      <% } %>
    </div>

    <div class="actions">
      <form method="post" action="/create">
        <!-- hidden fields to pass through all values -->
        <input type="hidden" name="title" value="<%= title %>" />
        <input type="hidden" name="type" value="<%= type %>" />
        <input type="hidden" name="percentage" value="<%= percentage %>" />
        <input type="hidden" name="dueDate" value="<%= dueDateISO %>" />
        <input type="hidden" name="allocateMinutes" value="<%= allocateMinutes %>" />
        <input type="hidden" name="reminders" value="<%= reminders %>" />
        <input type="hidden" name="dailyReminders" value="<%= dailyReminders ? 'yes' : '' %>" />
        <input type="hidden" name="dailyTime" value="<%= dailyTime %>" />
        <input type="hidden" name="email" value="<%= email %>" />
        <input type="hidden" name="worth" value="<%= worth %>" />
        <input type="hidden" name="classCode" value="<%= classCode %>" />
        <input type="hidden" name="youtube" value="<%= youtube %>" />
        <input type="hidden" name="spotify" value="<%= spotify %>" />
        <input type="hidden" name="includeMediaInEvent" value="<%= includeMediaInEvent ? 'yes' : '' %>" />
        <% if (backdropFileName) { %>
          <input type="hidden" name="backdropFileName" value="<%= backdropFileName %>" />
        <% } %>

        <button type="submit">Confirm & Create ICS (and schedule reminders)</button>
      </form>

      <button onclick="history.back()" style="margin-left:12px">Edit</button>
    </div>

  </body>
  </html>
