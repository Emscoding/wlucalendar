              const hasFile = fileInput && fileInput.files && fileInput.files.length > 0;
              const hasUrl = urlInput && urlInput.value && urlInput.value.trim().length > 0;
              if (!hasFile && !hasUrl) {
                e.preventDefault();
                alert('Please provide an ICS file or a URL before submitting.');
              }
            });
          });
        });
